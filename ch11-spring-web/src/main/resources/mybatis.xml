<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!--    开启事务日志-->
    <settings>
        <setting name="logImpl" value="STDOUT_LOGGING"/>
    </settings>
    <!--设置别名-->
    <typeAliases>
        <!--name:实体类所在的包名-->
        <package name="com.wupeng.domain"/>
    </typeAliases>
    <mappers>
        <!--name是包名，这个包下面的所有mapper.xml文件都加载-->
        <package name="com.wupeng.dao"/>
    </mappers>
</configuration>